<div class="container">
	<div class="daily-top">
		<button class=" add-event btn btn-primary btn-lg" data-toggle="modal" data-target="#myModalHorizontal">
               Add Events
        </button>
		<a href='/'>Return to monthly view</a>
	</div>

	<!-- Modal -->
	<div class="modal fade" id="myModalHorizontal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<!-- Modal Header -->
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">
                       <span aria-hidden="true">&times;</span>
                       <span class="sr-only">Close</span>
                </button>
					<h4 class="modal-title" id="myModalLabel">
						New Event :
					</h4>

				</div>

				<!-- Modal Body -->
				<div class="modal-body">

					<form name="addEvent" class="form-horizontal" role="form" action='/addEvent' method='POST' onSubmit="return validateForm()">
						<div class="form-group">
							<label class="col-sm-2 control-label" for="datetimepicker">Time</label>
							<div class='col-sm-8' id='datetimepicker'>
								<input type='date' class="form-control" name="date" placeholder="Please pick time for this event" />

							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-2 control-label" for="inputTitle">Title</label>
							<div class="col-sm-8">
								<input type="text" name="title" class="form-control" id="inputTitle" placeholder="Please input the title for this event"
								/>
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-2 control-label" for="inputLocation">Location</label>
							<div class="col-sm-8">
								<input type="text" name="location" class="form-control" id="inputLocation" placeholder="Please input the location for this event"
								/>
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-2 control-label" for="inputDescription">Description</label>
							<div class="col-sm-8">
								<input type="text" class="form-control" name="description" id="inputDescription" placeholder="Please input the description for this event"
								/>
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-offset-2 col-sm-10">
								<button type="submit" class="btn btn-default">Submit</button>
							</div>
						</div>
					</form>
				</div>
				<!-- Modal Footer -->
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">
                            Close
                </button>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="row" id="dailyEvent">
		</div>
		<div id='react-root'>{{{react}}}</div>
	</div>

</div>


<script id="initial-state" type="application/json">{{{state}}}</script>
<script id="initial-date" type="application/json">{{{date}}}</script>

<script src="../../public/js/vendor.js"></script>
<script src="../../public/js/components1.js"></script>
<script src="../public/js/source/components/validateForm.js"></script>